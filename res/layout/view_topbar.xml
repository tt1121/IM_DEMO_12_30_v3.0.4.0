<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="match_parent"
        android:layout_height="match_parent"
         >
    
    	<RelativeLayout
    	    android:id="@+id/imbtn_back"
    	    android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:paddingLeft="12dp"
        	android:paddingRight="12dp"
        	>
			<ImageButton
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/register_back"
	            android:clickable="false"
	            android:focusable="false"
	            android:layout_centerVertical="true"/>
		</RelativeLayout>
		
		<TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imbtn_back"
            android:gravity="center"
            android:textColor="#fff"
            android:singleLine="true"
			android:ellipsize="end"
            android:textSize="16sp" 
            android:visibility="gone"/>
		
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/login_register"
            android:textColor="#fff"
            android:singleLine="true"
			android:ellipsize="end"
			android:paddingLeft="@dimen/titleBar_text_padding"
			android:paddingRight="@dimen/titleBar_text_padding"
            android:textSize="19sp"  />

        <Button 
            android:id="@+id/imbtn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/im_info"
            android:text=""
            android:textColor="#46ac5e"
            android:visibility="gone"/>

</RelativeLayout>